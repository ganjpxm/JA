<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white" android:orientation="vertical" >

    <include android:id="@+id/header" layout="@layout/common_header" />
   
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="none" >
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:padding="20dp" >
            <ImageView android:id="@+id/cover_iv" android:layout_width="fill_parent" android:layout_height="200dp"
	            android:layout_gravity="center_horizontal" android:background="#00ffffff"
	            android:contentDescription="@string/empty" android:visibility="gone">
        	</ImageView>
            <TextView android:id="@+id/content_tv" android:layout_width="fill_parent" android:layout_height="wrap_content" 
				android:text="@string/empty"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>